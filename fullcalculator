    <p>
        <hr>
        <button onclick="calculation='';input.value=' '">AC</button>
        <button onclick="input.value = input.value.slice(0, -1); calculation = input.value;">del</button>
        <button>+/-</button>
        <button onclick="calculation += '/'; input.value = calculation;">/</button>
    </p>
    <p>
        <button onclick="calculation += '7'; input.value = calculation;">7</button>
        <button onclick="calculation += '8'; input.value = calculation;">8</button>
        <button onclick="calculation += '9'; input.value = calculation;">9</button>
        <button onclick="calculation += '*'; input.value = calculation;">X</button>
    </p>
    <p>
        <button onclick="calculation += '4'; input.value = calculation;">4</button>
        <button onclick="calculation += '5'; input.value = calculation;">5</button>
        <button onclick="calculation += '6'; input.value = calculation;">6</button>
        <button onclick="calculation += '-'; input.value = calculation;">-</button>
    </p>
    <p>
        <button id="one" onclick="calculation += '1'; input.value = calculation;">1</button>
        <button id="two" onclick="calculation += '2'; input.value = calculation;">2</button>
        <button onclick="calculation += '3'; input.value = calculation;">3</button>
        <button id="plus" onclick="calculation += '+'; input.value = calculation;">+</button>
    </p>
    <p>
        <button onclick="calculation += '%'; input.value = calculation;">%</button>
        <button onclick="calculation += 0; input.value = calculation;">0</button>
        <button onclick="calculation += '.'; input.value = calculation;">.</button>
        <button onclick="calculation = eval(calculation); input.value = calculation;">=</button>
    </p>
